# 智诊通后端系统环境配置示例

# 应用基础配置
APP_NAME=智诊通-多模态智能医生问诊系统
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 数据库配置
DATABASE_URL=sqlite:///./zhizhentong.db

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Milvus向量数据库配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=medical_knowledge

# RabbitMQ消息队列配置
RABBITMQ_URL=amqp://zhizhentong:zhizhentong123@localhost:5672/

# JWT认证配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# 允许的主机配置
ALLOWED_HOSTS=["*"]

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "audio/wav", "audio/mp3"]

# AI模型配置
OPENAI_API_KEY=
OPENAI_BASE_URL=
CLAUDE_API_KEY=
WENXIN_API_KEY=
WENXIN_SECRET_KEY=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# 缓存配置
CACHE_TTL=3600
CACHE_PREFIX=zhizhentong:

# 系统限制配置
MAX_CONVERSATION_LENGTH=1000
MAX_MESSAGE_LENGTH=5000
SESSION_TIMEOUT=3600

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
